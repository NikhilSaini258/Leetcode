// Recursion Solution

class Solution {
public:
    int solve(vector<int>& nums, int index) {
        if (index >= nums.size()) {
            return 0;
        }
        int selected = nums[index] + solve(nums, index+2);
        int notSelected = solve(nums, index+1);
        return std::max(selected, notSelected);
    }
    int rob(vector<int>& nums) {
        return solve(nums, 0);
    }
};
